@import 'base' 

header
  padding 1rem
  display flex
  justify-content space-between
  align-items center
  background-color secondary-color


  #menu
    display flex
    margin 0 40px
    padding 0
    list-style none
    font-size 24px
    li 
      margin 0 3rem 0 0
      padding 5px 10px
      border-radius 10px
      &.high
        background-color high-color
      a 
        text-decoration none
        color #fff
        cursor pointer
        &:hover
          color #aaa
    @media screen and (max-width phone)
      margin 10px
      font-size 30px

  .search
    max-width 250px
    background-color transparent
    bottom 2px solid primary-color
    border-radius 50px
    font-family inherit
    font-size 1rem
    padding 0.5rem 1rem
    color #fff
    width: 100%
    &::placeholder
      color #7378c5
    &:focus
      outline none
      background-color primary-color

main
  height auto
  margin 0 auto
  // display grid
  gap 1rem
  justify-items center
  @media screen and (min-width tablet)
    grid-template-columns repeat(2, 1fr)
  @media screen and (min-width netbook)
    grid-template-columns repeat(3, 1fr)
  @media screen and (min-width pc)
    grid-template-columns repeat(5, 1fr)


  .movie
    width 250px
    margin 1rem
    background-color secondary-color
    box-shadow 0 4px 5px rgba(0,0,0,.2);
    position relative
    overflow hidden
    border-radius 3px
    @media screen and (min-width mobile)
      height 500px
      

    &:hover .overview
      transform translateY(0)

    img
      width 100%
      height 375px
      margin 0

    .movie-info
      color #eee
      display flex
      align-items start
      justify-content space-between
      padding 0.5rem 1rem
      letter-spacing 0.5px
      // min-height 6rem

      h3 
        margin-top 0
        padding 0 10px

      span
        display block
        margin-top 0
        background-color primary-color
        padding 0.25rem .5rem
        border-radius 3px
        font-weight bold

        &.green
          color green

        &.orange
          color orange

        &.red
          color red

    .overview
      background-color #fff    
      padding 2rem
      position absolute
      right 0
      bottom 0
      left 0
      max-height 100%
      transform translateY(101%)
      transition .4s ease 
      overflow-y auto

.paginate
  display none
  position relative
  color #fff
  display flex
  justify-content center
  align-items center

  .controls 
    button
      font-size 30px
      margin 0 20px
      padding 0 5px
      cursor pointer
      border-radius 10px
      transition .6s ease
      &:hover
        background-color #555
      &:active
        transform scale(.95)
      &:disabled
        font-size 30px
        background-color primary-color
        border none
        cursor not-allowed
        





  ul
    display flex
    flex-wrap wrap
    list-style none
    margin 50px 0
    padding 0
    li
      text-align center
      border 1px solid #cf64e0
      border-radius 5px
      padding 3px 10px
      width 40px
      font-size 1.4rem
      cursor pointer
      transition .6s ease
      &:hover
        background-color #333
      &.highlight
        background-color #7C7EFF
              
      
        
        
      


footer
  background-color secondary-color
  color #fff
  display flex
  justify-content end
  align-items center
  padding 20px 30px
  
  .about 
    p
      padding 0
      margin 0
      font-size 14px

      a 
        cursor pointer
        color inherit
        text-decoration none
        &:hover
          color #aaa

    .social
      display flex
      margin: 10px
      .fa-telegram
        font-size 25px
        margin 0 10px
      

 